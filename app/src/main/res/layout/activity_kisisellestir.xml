<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgraund_black_stars_horizantal"
    tools:context=".KisisellestirActivity">

    <ImageView
        android:id="@+id/imageViewS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewS4"
        app:layout_constraintEnd_toStartOf="@+id/imageViewS2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintVertical_bias="0.49"
        app:srcCompat="@drawable/avatar_mutlu" />

    <ImageView
        android:id="@+id/imageViewS4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonKaydet"
        app:layout_constraintEnd_toStartOf="@+id/imageViewS5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewS1"
        app:srcCompat="@drawable/avatar_mutlu_s4" />

    <ImageView
        android:id="@+id/imageViewS5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imageViewS6"
        app:layout_constraintStart_toEndOf="@+id/imageViewS4"
        app:layout_constraintTop_toTopOf="@+id/imageViewS4"
        app:srcCompat="@drawable/avatar_mutlu_s5" />

    <ImageView
        android:id="@+id/imageViewS6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewS5"
        app:layout_constraintTop_toTopOf="@+id/imageViewS4"
        app:srcCompat="@drawable/avatar_mutlu_s6" />

    <ImageView
        android:id="@+id/imageViewS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imageViewS3"
        app:layout_constraintStart_toEndOf="@+id/imageViewS1"
        app:layout_constraintTop_toTopOf="@+id/imageViewS1"
        app:srcCompat="@drawable/avatar_mutlu_s2" />

    <ImageView
        android:id="@+id/imageViewS3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewS2"
        app:layout_constraintTop_toTopOf="@+id/imageViewS1"
        app:srcCompat="@drawable/avatar_mutlu_s3" />

    <ImageView
        android:id="@+id/imageViewAvatarShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar_mutlu" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:textColor="@color/text_yellow"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/ki_name"
        app:layout_constraintBottom_toTopOf="@+id/imageViewS1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAvatarShow" />

    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:text="@string/ki_kaydet"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/text_yellow"
        app:layout_constraintBottom_toTopOf="@+id/textViewIptal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewIptal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:gravity="center|center_horizontal"
        android:text="@string/ki_iptal"
        android:textColor="#F44336"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>