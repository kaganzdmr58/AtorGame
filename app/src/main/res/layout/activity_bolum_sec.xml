<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgraund_black_stars_horizantal"
    tools:context=".BolumSecActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/bolumler"
            android:textColor="@color/text_yellow"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageViewBolX8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageViewBol1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewBolIlk"
            app:layout_constraintTop_toTopOf="@+id/imageViewBolIlk"
            app:srcCompat="@drawable/bolx2" />

        <ImageView
            android:id="@+id/imageViewBol2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintBottom_toTopOf="@+id/imageViewBolX4"
            app:layout_constraintEnd_toStartOf="@+id/imageViewBolX1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewBolIlk"
            app:srcCompat="@drawable/bolx3" />

        <ImageView
            android:id="@+id/imageViewBolIlk"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintBottom_toTopOf="@+id/imageViewBol2"
            app:layout_constraintEnd_toStartOf="@+id/imageViewBol1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewBolX8"
            app:srcCompat="@drawable/bolx1" />

        <ImageView
            android:id="@+id/imageViewBolX1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewBol2"
            app:layout_constraintTop_toTopOf="@+id/imageViewBol2"
            app:srcCompat="@drawable/bolxx1" />

        <ImageView
            android:id="@+id/imageViewBolX4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageViewBolX5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewBol2"
            app:srcCompat="@drawable/bolxx2" />

        <ImageView
            android:id="@+id/imageViewBolX5"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewBolX4"
            app:layout_constraintTop_toTopOf="@+id/imageViewBolX4"
            app:srcCompat="@drawable/bolxx3" />

        <ImageView
            android:id="@+id/imageViewBolX8"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toTopOf="@+id/imageViewBolIlk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:srcCompat="@drawable/bolxx8" />

        <ImageView
            android:id="@+id/imageViewbolX12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitStart"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBolX8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageViewBolX8"
            app:layout_constraintTop_toTopOf="@+id/imageViewBolX8"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>