<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewNewLevel"
        android:layout_width="236dp"
        android:layout_height="329dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/new_level_rozet" />

    <TextView
        android:id="@+id/textViewNewLevelSayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11."
        android:textColor="#FF0000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNewLevel"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNewLevel"
        app:layout_constraintStart_toStartOf="@+id/imageViewNewLevel"
        app:layout_constraintTop_toTopOf="@+id/imageViewNewLevel"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aler_level"
        android:textColor="#FF0000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewNewLevel"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNewLevel"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/imageViewNewLevel"
        app:layout_constraintTop_toTopOf="@+id/imageViewNewLevel"
        app:layout_constraintVertical_bias=".45" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/aler_tebrikler"
        android:textColor="#FF0000"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewNewLevel"
        app:layout_constraintEnd_toEndOf="@+id/imageViewNewLevel"
        app:layout_constraintStart_toStartOf="@+id/imageViewNewLevel" />
</androidx.constraintlayout.widget.ConstraintLayout>